{namespace desktop.urls}

/**
 * Helper template to insert locale for international pages
 * @param url
 * @param locale
 */
{template .urlWithLocale}
	{if $locale != 'en'}
		{$locale|casing:'lower'}/
	{/if}
	{$url |noAutoescape}
{/template}

/**
 * @param locale
 */
{template .index}
 {call desktop.urls.urlWithLocale data="all"}{param url}/index.html{/param}{/call}
{/template}

/**
 * @param locale
 */
{template .static}
 {call desktop.urls.urlWithLocale data="all"}{param url}/static{/param}{/call}
{/template}

