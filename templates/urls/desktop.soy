{namespace desktop.urls}

/**
 * Helper template to insert locale for international pages
 * @param url
 * @param locale
 */
{template .urlWithLocale}
	{if $locale != 'en'}
		{$locale|casing:'lower'}/
	{/if}
	{$url |noAutoescape}
{/template}

/**
 * @param locale
 */
{template .index}
 {call url.urlWithLocale data="all"}{param url}/index.html{/param}{/url}
{/template}

/**
 * @param locale
 */
{template .static}
 {call url.urlWithLocale data="all"}{param url}/static{/param}{/url}
{/template}

